<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Inventory_Quantity_0_Notice</fullName>
        <description>Inventory Quantity 0 Notice</description>
        <protected>false</protected>
        <recipients>
            <recipient>Inventory_Manager</recipient>
            <type>role</type>
        </recipients>
        <recipients>
            <recipient>Marketing_Manager</recipient>
            <type>role</type>
        </recipients>
        <recipients>
            <recipient>iescobedx@wise-wolf-415ubf.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/MarketingProductInquiryResponse</template>
    </alerts>
    <rules>
        <fullName>Quantity Equals 0</fullName>
        <actions>
            <name>Inventory_Quantity_0_Notice</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Inventory__c.Quantity__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
        <description>When a product has a quantity of 0.</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
